@model MiniProject_InsuranceManagementSystem.Models.HomeInsurance

@{
    ViewBag.Title = "HomeInsurance";
}

<h2></h2>
<style>
    option {
        background-color: white;
        color: black;
    }
</style>

<button class="btn btn-primary" style="margin-top:2rem;margin-bottom:1rem;margin-left:2rem;">
    @Html.ActionLink("《 Go Back", "FillCustomerDetails", new { area = "" }, new { @style = "font-size:14px; color:white;" })
</button>
<h1 style="text-align:center;font-weight:bold;margin-bottom:3rem; margin-top:0">Apply for Home Insurance</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card align-items-center" style="border-radius: 1rem; box-shadow: 0px 7px 35px -4px black; margin:1rem 24rem;padding:2rem 2rem; width:600px">

            <div class="form-horizontal" style="margin-left:4rem">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <div class="form-group">
                    <div class="col-md-10">
                        <label for="building-type" class="form-label">Building Type : </label>
                        <select name="building-type" id="building-type" style=" background-color: royalblue; padding: 1rem; border-radius: 0.2rem; color: white; margin: 0;" class="custom-list-items">
                            <option value="Rental Property">Rental Property</option>
                            <option value="HomeOwner Property">HomeOwner Property</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.FloorArea, htmlAttributes: new { @class = "control-label col-md-4"  ,@style = "margin-left:-2rem;"})
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.FloorArea, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter FloorArea (sqft)", @style = "margin-left:1rem; height:4rem;" } })
                        @Html.ValidationMessageFor(model => model.FloorArea, "", new { @class = "text-danger", @style = "margin-left:1rem;" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.City, htmlAttributes: new { @class = "control-label col-md-3", @style = "margin-left:-2rem;" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter City Name"  ,@style = "margin-left:1rem; height:4rem;" } })
                        @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger", @style = "margin-left:1rem;" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.HouseNumber, htmlAttributes: new { @class = "control-label col-md-5" , @style = "margin-left:-2rem;"})
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.HouseNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter HouseNumber", @style = "margin-left:1rem; height:4rem;" } })
                        @Html.ValidationMessageFor(model => model.HouseNumber, "", new { @class = "text-danger", @style = "margin-left:1rem;" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Valuation, htmlAttributes: new { @class = "control-label col-md-4" , @style = "margin-left:-2rem;"})
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Valuation, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Valuation (Rs)", @style = "margin-left:1rem; height:4rem;" } })
                        @Html.ValidationMessageFor(model => model.Valuation, "", new { @class = "text-danger", @style = "margin-left:1rem;"})
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PlanDuration, htmlAttributes: new { @class = "control-label col-md-4",@style="margin-left:0" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.PlanDuration, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter PlanDuration (Years)", @style = "margin-left:1rem; height:4rem;" } })
                        @Html.ValidationMessageFor(model => model.PlanDuration, "", new { @class = "text-danger", @style = "margin-left:1rem;" })
                    </div>
                </div>

                <div class="form-group" >
                    <div class="col-md-offset-2 col-md-10" style="margin-left:1rem;">
                        <input type="submit" value="Submit" class="btn btn-success btn-lg btn-block" />
                    </div>
                </div>
            </div>
        </div>
        
        }

