@model MiniProject_InsuranceManagementSystem.Models.TravelInsurance

@{
    ViewBag.Title = "TravelInsurance";
}

<style>

    body {
        background-color: darkgray;
    }

    hr {
        color: ghostwhite;
    }


    h1 {
        color: darkslateblue;
        font-weight: bold;
        font-family: 'Segoe UI',Tahoma, Geneva, Verdana, sans-serif;
        text-align: center;
    }

    option {
        background-color: white;
        color: black;
    }

    select {
        /*        background-color: #22a344;
    */ background-color: darkslateblue;
        padding: 1rem;
        border-radius: 0.5rem;
        color: white;
        border-color: none;
    }
</style>

<button class="btn btn-primary" style="margin-top:2rem;margin-bottom:1rem;margin-left:2rem;">
    @Html.ActionLink("《 Go Back", "FillCustomerDetails", new { area = "" }, new { @style = "font-size:14px; color:white;" })
</button>

<hr>
<h1>Apply for Travel Insurance</h1>
<hr style="margin-bottom:3rem">

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div style="border-radius: 1rem; box-shadow: 0px 7px 35px -4px black; background-color: white; margin: 1rem 31rem; padding: 2rem 0; ">

        <div class="form-horizontal" style="margin-left:4rem">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group" style="margin-left:6rem;margin-top:2rem">
                <div class="col-md-10">
                    <label for="health-condition" class="form-label"> Suffering from any Diseased : </label>
                    <select name="health-condition" id="health-condition">
                        <option value="Diseased Person">Yes</option>
                        <option value="Healthy Person">No</option>
                    </select>
                </div>
            </div>

            <div class="form-group" style="margin-left:7rem">

                <label class="form-label" for="birthDate">Date of Birth</label>
                <input type="date" id="birthDate" name="birthDate" class="form-control form-control-lg" required />

            </div>

            <div class="form-group" style="margin-left:4.5rem;margin-bottom:0">
                @Html.LabelFor(model => model.SourceCountry, htmlAttributes: new { @class = "control-label col-md-4", @style = "margin-left:1rem;" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SourceCountry, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Valuation (Rs)", @style = "margin-left:1rem; height:4rem;" } })
                    @Html.ValidationMessageFor(model => model.SourceCountry, "", new { @class = "text-danger", @style = "margin-left:1rem;" })
                </div>
            </div>

            <div class="form-group" style="margin-left:4.5rem;margin-bottom:0">
                @Html.LabelFor(model => model.DestinationCountry, htmlAttributes: new { @class = "control-label col-md-4", @style = "margin-left:1rem;" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DestinationCountry, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Valuation (Rs)", @style = "margin-left:1rem; height:4rem;" } })
                    @Html.ValidationMessageFor(model => model.DestinationCountry, "", new { @class = "text-danger", @style = "margin-left:1rem;" })
                </div>
            </div>
            <div class="form-group" style="margin-left:4.5rem;margin-bottom:0">
                @Html.LabelFor(model => model.InsuranceAmount, htmlAttributes: new { @class = "control-label col-md-4", @style = "margin-left:1rem;" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.InsuranceAmount, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Valuation (Rs)", @style = "margin-left:1rem; height:4rem;" } })
                    @Html.ValidationMessageFor(model => model.InsuranceAmount, "", new { @class = "text-danger", @style = "margin-left:1rem;" })
                </div>
            </div>


            <div class="form-group" style="margin-left:7rem">

                <label class="form-label" for="startDate">Start Date</label>
                <input type="date" id="startDate" name="startDate" class="form-control form-control-lg" required />

            </div>

            <div class="form-group" style="margin-left:7rem">

                <label class="form-label" for="endDate">End Date</label>
                <input type="date" id="endDate" name="endDate" class="form-control form-control-lg" required />

            </div>



            <div class="form-group" style="margin-left:4.5rem">
                <div class="col-md-offset-2 col-md-10" style="margin-left:1rem;">
                    <input type="submit" value="Submit" class="btn btn-success btn-lg btn-block" />
                </div>
            </div>
        </div>
        </div>
        }

        
