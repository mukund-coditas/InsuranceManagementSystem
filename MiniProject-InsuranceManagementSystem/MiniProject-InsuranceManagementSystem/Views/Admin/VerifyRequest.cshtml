
@{
    ViewBag.Title = "VerifyRequest";
}


<style>
    body {
        background-color: antiquewhite;
    }
</style>

<button class="btn btn-primary" style="margin-top:2rem;margin-bottom:1rem;margin-left:1rem;">
    @Html.ActionLink("《 Back to List", "PendingRequests", new { area = "" }, new { @style = "font-size:14px; color:white;" })
</button>

<h1 style="text-align:center;font-weight:bold;margin-bottom:3rem; margin-top:0">Verify Request</h1>


<div class="container" style="margin-top: 4rem; padding:0 4rem">
    <div class="row justify-content-center align-items-center p-5">
        <div class="col col-xl-10">
            <div class="card" style="border-radius: 1rem; box-shadow: 0px 7px 41px -4px black; ">



                <div class="col-md-6 col-lg-7 align-items-center">
                    <div class="card-body p-4 p-lg-5">

                        <form action="~/">

                            <div class="align-items-center mb-3 pb-1">
                                <span class="h3 fw-bold mb-0">FirstName : </span>
                            </div>

                            <h5 class="mb-3 pb-3" style="letter-spacing: 1px;">Save you and your family</h5>

                            <div class="mb-4">
                                <input type="text" id="username" name="username" class="form-control form-control-lg" placeholder="Enter username" required d/>
                                <label class="form-label" for="username">Username</label>
                            </div>

                            <div class="mb-4">
                                <input type="password" id="password" name="password" class="form-control form-control-lg" placeholder="Enter password" required />
                                <label class="form-label" for="password">Password</label>
                            </div>

                                <button class="btn-block btn-success btn" type="submit" style="padding:0.8rem" name="PurchasedId">&#10004 Approve</button>
                                <button class="btn-block btn-danger btn" type="submit" style="padding:0.8rem" name="PurchasedId">Reject</button>
  
                        </form>




                    </div>
                </div>


            </div> 
</div>