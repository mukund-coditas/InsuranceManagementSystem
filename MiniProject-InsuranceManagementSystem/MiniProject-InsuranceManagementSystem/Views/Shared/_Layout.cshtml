<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Insurance Management System</title>
    <link href="~/Content/Site.css" rel="stylesheet" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @*https://www.passionateinmarketing.com/wp-content/uploads/2021/07/life_insurance_190529.jpg*@
</head>
<body style="background-image: url(images/insurancebgimageh.jpg);background-repeat: no-repeat; background-size: cover; ">


    <div class="navbar navbar-expand-lg navbar-dark bg-dark ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                </button>
                @Html.ActionLink("Insurance Management System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="font-weight:600; background-color:aliceblue; border-radius:0.8rem;">
                    <li>@Html.ActionLink("Login", "LoginUser", "LoginRegister", new { area = "" },new {@style = "font-size:16px; color:black;" })</li>
                    <li>@Html.ActionLink("ShowUsers", "Index", "LoginRegister", new { area = "" }, new {@style = "font-size:16px; color:black;" })</li>
                    <li>@Html.ActionLink("Register", "RolesFilterMethod", "LoginRegister", new { area = "" }, new {@style = "font-size:16px; color:black;" })</li>
                    <li>@Html.ActionLink("View Insurances", "Index", "Visitor", new { area = "" }, new {@style = "font-size:16px; color:black;" })</li>

                </ul>
            </div>
        </div>
    </div>


    <div class="container body-content">
        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year - All Rights Reserved</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
